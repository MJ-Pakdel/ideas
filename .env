# IDAES Docker Environment Configuration

# Application Configuration
IDAES_VERSION=latest
IDAES_WORKERS=4
IDAES_MAX_CONCURRENT_DOCS=4

# ChromaDB Configuration
CHROMA_SERVER_HOST=0.0.0.0
CHROMA_SERVER_HTTP_PORT=8000
